{
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": false,
	"semi": true,
	"singleQuote": true,
	"quoteProps": "as-needed",
	"jsxSingleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",
	"requirePragma": false,
	"insertPragma": false,
	"proseWrap": "preserve",
	"htmlWhitespaceSensitivity": "css",
	"vueIndentScriptAndStyle": false,
	"endOfLine": "lf",
	"embeddedLanguageFormatting": "auto",
	"singleAttributePerLine": true,
	"experimentalTernaries": false,
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"printWidth": 80,
				"tabWidth": 2
			}
		},
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"tabWidth": 2,
				"singleQuote": false
			}
		},
		{
			"files": "*.md",
			"options": {
				"printWidth": 80,
				"proseWrap": "always",
				"tabWidth": 2
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"options": {
				"parser": "typescript",
				"printWidth": 100,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "es5"
			}
		},
		{
			"files": ["*.js", "*.jsx"],
			"options": {
				"parser": "babel",
				"printWidth": 100,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "es5"
			}
		},
		{
			"files": "*.java",
			"options": {
				"parser": "java",
				"printWidth": 120,
				"tabWidth": 4,
				"useTabs": false
			}
		},
		{
			"files": "*.sql",
			"options": {
				"parser": "sql",
				"printWidth": 120,
				"tabWidth": 2,
				"keywordCase": "upper",
				"identifierCase": "lower"
			}
		},
		{
			"files": "*.prisma",
			"options": {
				"printWidth": 80,
				"tabWidth": 2
			}
		},
		{
			"files": ["package.json", "tsconfig.json", "jsconfig.json"],
			"options": {
				"printWidth": 80,
				"tabWidth": 2,
				"trailingComma": "none"
			}
		},
		{
			"files": ["*.config.js", "*.config.ts"],
			"options": {
				"printWidth": 100,
				"tabWidth": 2,
				"singleQuote": true
			}
		}
	]
}
