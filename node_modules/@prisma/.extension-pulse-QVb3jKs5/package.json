{
  "name": "@prisma/extension-pulse",
  "type": "module",
  "main": "./src/index.ts",
  "version": "1.2.2",
  "description": "Prisma Client extension for Pulse",
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "exports": {
    "./node": {
      "import": "./dist/esm/entry.node.js",
      "require": "./dist/cjs/entry.node.js",
      "types": "./dist/esm/entry.node.d.ts"
    },
    "./workerd": {
      "import": "./dist/esm/entry.workerd.js",
      "require": "./dist/cjs/entry.workerd.js",
      "types": "./dist/esm/entry.workerd.d.ts"
    },
    ".": {
      "node": {
        "import": "./dist/esm/entry.node.js",
        "require": "./dist/cjs/entry.node.js",
        "types": "./dist/esm/entry.node.d.ts"
      },
      "workerd": {
        "import": "./dist/esm/entry.workerd.js",
        "require": "./dist/cjs/entry.workerd.js",
        "types": "./dist/esm/entry.workerd.d.ts"
      }
    }
  },
  "types": "./dist/cjs/entry.node.d.ts",
  "scripts": {
    "build": "./scripts/build.sh",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:check": "eslint src/** --max-warnings 0",
    "test": "vitest --typecheck",
    "types:check": "npm run prisma:generate && tsc --noEmit",
    "full:check": "npm run types:check && npm run lint:check && npm run format:check && npm run test",
    "prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma"
  },
  "files": [
    "dist/**"
  ],
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.0",
    "@cloudflare/workers-types": "^4.20240405.0",
    "@prisma/client": "5.1.1",
    "@tsconfig/esm": "^1.0.2",
    "@tsconfig/node14": "^14.1.0",
    "@tsconfig/node18-strictest": "^1.0.0",
    "@types/node": "^18.11.12",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "prettier": "3.1.1",
    "prisma": "5.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vitest": "^1.5.0"
  },
  "peerDependencies": {
    "@prisma/client": ">=4.16.1"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}
